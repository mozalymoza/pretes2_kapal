<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Data Pendidikan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Edit Data Kapal</h2>
        <form action="/kapal/update/<%= id %>" method="POST">
            <div class="row">
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama Kapal</label>
                    <input type="text" class="form-control" name="nama_kapal" value="<%= nama_kapal %>" required/>
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama Pemilik</label>
                    <select class="form-select" aria-label="Pilih Nama Pemilik" name="id_pemilik" required>
                        <option selected>Data Pemilik</option>
                        <% for(var i=0; i < data_pemilik.length; i++){ %>
                            <option value="<%= data_pemilik[i].id_pemilik %>"><%= data_pemilik[i].nama_pemilik %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama DPI</label>
                    <select class="form-select" aria-label="Pilih nama Daerah" name="id_dpi" required>
                        <option selected>Data DPI</option>
                        <% for(var i=0; i < data_dpi.length; i++){ %>
                            <option value="<%= data_dpi[i].id_dpi %>"><%= data_dpi[i].nama_dpi %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama DPI</label>
                    <select class="form-select" aria-label="Pilih Nama Alat Tangkap" name="id_alat_tangkap" required>
                        <option selected>Data Alat Tangkap</option>
                        <% for(var i=0; i < data_alat.length; i++){ %>
                            <option value="<%= data_alat[i].id_alat_tangkap %>"><%= data_alat[i].nama_alat_tangkap %></option>
                        <% } %>
                    </select>
                </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Simpan</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>