<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Data Pemilik</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<style>
    body {
        background-color: #2693e6;
    }
    .container {
        margin-top: 50px;
    }
    h1 {
        color: #343a40;
    }
    .table {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(235, 112, 112, 0.1);
    }
    th, td {
        vertical-align: middle !important;
    }
    .btn {
        border-radius: 5px;
    }
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }
    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }
    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }
    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>
</head>
<body>
  <%- include('../partials/__head.ejs') %>
<%- include('../partials/__navbar.ejs') %>
<div class="container">
    <% if (messages.success) { %>
    <div class="alert alert-info" role="alert">
        <%- messages.success %>
    </div>
    <% } %>
    <h1 class="text-center text-black-100">Data Pemilik</h1>
    <div class="row">
        <div class="col">
            <a href="/pemilik/create" class="btn btn-sm btn-success mb-3">Tambah</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama Pemilik</th>
                        <th scope="col">Alamat</th>
                        <th scope="col">No HP</th>
                        <th colspan="2" scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < data.length; i++){ %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].nama_pemilik %></td>
                        <td><%= data[i].alamat %></td>
                        <td><%= data[i].no_hp %></td>
                        <td>
                            <a href="/pemilik/edit/<%= data[i].id_pemilik %>" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/pemilik/delete/<%= data[i].id_pemilik %>" class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>

<%- include('../partials/__foot.ejs') %>