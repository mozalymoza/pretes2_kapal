<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>pemilik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

    <div class="container">
        <% if (messages.success) { %>
          <div class="alert alert-info" role="alert">
           <%- messages.success %>
          </div>
        <% } %>
        <h1 class="text-center">Data Pemilik</h1>
        <div class="row">
            <div class="col">
              <a href="/pemilik/create" class="btn btn-sm btn-success">Tambah</a>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama pemilik</th>
                        <th scope="col">Alamat</th>
                        <th colspan="2" scope="col">Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < data.length; i++){ %>
                            <tr>
                                <th scope="row"><%= (i+1) %></th>
                                <td><%= data[i].nama_pemilik %></td>
                                <td><%= data[i].alamat %></td>
                                <td><%= data[i].no_hp %></td>
                                <td>
                                    <a href="/pemilik/edit/<%= data[i].id_pemilik %>" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/pemilik/delete/<%= data[i].id_pemilik %>" class="btn btn-sm btn-danger">Delete</a></td>
                            </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>
            
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  </body>
</html>